<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Avalonia.Media.MultiViewDemo.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:SimpleViewModel" 
             x:Class="Avalonia.Media.MultiViewDemo.Views.SimplePlayer">
    <Border Margin="5" Padding="10" BorderBrush="White" BorderThickness="1">
        <UniformGrid Rows="2" Columns="2">
            <Border Margin="5" Padding="5" BorderBrush="Red" BorderThickness="1">
                <Grid RowDefinitions="Auto,*">
                    <Label Margin="5">Vid 1</Label>
                    <Viewbox Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <MediaPlayerPresenter Name="_presenter1" />
                    </Viewbox>
                </Grid>
            </Border>
            <Border Margin="5" Padding="5" BorderBrush="Yellow" BorderThickness="1">
                <Grid RowDefinitions="Auto,*">
                    <Label Margin="5">Vid 2</Label>
                    <Viewbox Grid.Row="1">
                        <MediaPlayerPresenter Name="_presenter2" />
                    </Viewbox>
                </Grid>
            </Border>
            <Border Margin="5" Padding="5" BorderBrush="Green" BorderThickness="1">
                <Grid RowDefinitions="Auto,*">
                    <Label Margin="5">Vid 3</Label>
                    <Viewbox Grid.Row="1">
                        <MediaPlayerPresenter Name="_presenter3" />
                    </Viewbox>
                </Grid>
            </Border>
            <Border Margin="5" Padding="5" BorderBrush="Blue" BorderThickness="1">
                <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch" RowDefinitions="Auto,Auto,Auto">
                    <Label Margin="5">Controls</Label>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Name="_loadButton" Click="LoadButton_Click">Load Media</Button>
                        <Button Name="ToggleButton" Click="ToggleButton_Click">Toggle Viewer</Button>
                        <Button Command="{Binding PlayAsync}">Play</Button>
                        <Button Command="{Binding PauseAsync}">Pause</Button>
                        <Button Command="{Binding StopAsync}">Stop</Button>
                    </StackPanel>
                    <Grid HorizontalAlignment="Stretch" Grid.Row="2" ColumnDefinitions="Auto,*,Auto">
                        <Label Width="70" VerticalAlignment="Center" Grid.Column="0" Margin="5"
                               Content="{Binding Position, StringFormat='hh\\:mm\\:ss'}" />
                        <Slider Grid.Column="1" VerticalAlignment="Center" TickPlacement="None" Name="_progressSlider"
                                ValueChanged="Slider_ValueChanged"
                                Maximum="{Binding Ticks}"
                                Minimum="0"
                                Value="{Binding CurrentPosition}" />
                        <Label Width="70" VerticalAlignment="Center" Grid.Column="2" Margin="5"
                               Content="{Binding Duration,  StringFormat='hh\\:mm\\:ss'}" />
                    </Grid>
                </Grid>
            </Border>
        </UniformGrid>
    </Border>
</UserControl>